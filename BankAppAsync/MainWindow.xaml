<Window x:Class="BankAppAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankAppAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Visibility="Hidden" Name="attemptsLeft" Height="20" Width="auto" TextAlignment="Center" Margin="0 0 0 250"/>
        <TextBlock Height="20" Width="200" Text="Введите ваш ИИН и пароль" TextAlignment="Center" Margin="0 0 0 150"/>
        <TextBox Name="iinBox" Height="30" Width="200" ToolTip="ИИН"/>
        <PasswordBox Name="passwordBox" Height="30" Width="200" Margin="0 150 0 0" />
        <Button Height="30" Width="180" Content="Войти" Margin="0 250 0 0" Click="LoginAttempt"/>
    </Grid>
</Window>
    